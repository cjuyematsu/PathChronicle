{
    "extends": "../shared/tsconfig.json",
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "rootDir": "/.",
        "outDir": "./dist",
        "types": ["node"],
        "allowJs": false,
        "noEmit": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "@shared/*": ["../shared/*"]
        }
    },
    "include": ["src/**/*", "../shared/**/*"],
    "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
